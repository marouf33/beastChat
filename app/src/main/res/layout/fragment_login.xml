<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/activity_login_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">


    <EditText
        android:id="@+id/fragment_login_userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_login_userPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <EditText
    android:id="@+id/fragment_login_userPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Password"
        android:inputType="textPassword"
    app:layout_constraintTop_toBottomOf="@id/fragment_login_userEmail"
    app:layout_constraintBottom_toTopOf="@id/fragment_login_loginButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/fragment_login_loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sign In"
        app:layout_constraintBottom_toTopOf="@id/fragment_login_registerButton"
        app:layout_constraintTop_toBottomOf="@id/fragment_login_userPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/fragment_login_registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Register"
        app:layout_constraintBottom_toTopOf="@+id/activity_login_facebook_button"
        app:layout_constraintTop_toBottomOf="@id/fragment_login_loginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/activity_login_facebook_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_login_registerButton"
        app:layout_constraintEnd_toStartOf="@id/login_with_google"
        app:layout_constraintStart_toStartOf="parent"
     />


    <com.shobhitpuri.custombuttons.GoogleSignInButton
        android:id="@+id/login_with_google"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="6dp"
        android:layout_centerInParent="true"
        android:text="Google Sign In      "
        app:isDarkTheme="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_login_registerButton"
        app:layout_constraintStart_toEndOf="@id/activity_login_facebook_button"/>

    <ProgressBar
        android:id="@+id/login_progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.9" />

</android.support.constraint.ConstraintLayout>